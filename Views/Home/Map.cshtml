@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>title</title>
</head>
<div id="map-container">
    <div id="map"></div>
    <aside id="sidebar">
        <h4>Datasett</h4>
        <label><input type="checkbox" id="toggleFlom" checked> Flomområder</label><br>
        <label><input type="checkbox" id="toggleKvikkleire"> Kvikkleire</label>

        <h4>Instruksjoner</h4>
        <ol>
            <li>Marker området som skal undersøkes.</li>
            <li>Når området er markert kan det være fremhevede farer.</li>
            <li>Trykk på hver markerte fare for å få mer informasjon.</li>
        </ol>
        
        <h4>Tegnforklaring</h4>
        <div class="map-legend">
            <div class="legend-item">
                <span class="legend-color" style="background-color: #0077ff"></span>
                <span class="legend-label">Flomsoner</span>
            </div>
            <div class="legend-item">
                <span class="legend-color" style="background-color: #ff000f"></span>
                <span class="legend-label">Kvikkleire Faresoner</span>
            </div>
        </div>

    </aside>
</div>

@using GIS_Prosjekt.Helpers
@inject IWebHostEnvironment HostEnvironment

@ViteHelper.ViteScripts("Scripts/map.ts", HostEnvironment.IsDevelopment())
